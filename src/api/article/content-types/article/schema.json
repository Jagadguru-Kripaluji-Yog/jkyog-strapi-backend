{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 256,
      "minLength": 1
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 1
    },
    "author": {
      "type": "string",
      "required": true,
      "maxLength": 256,
      "minLength": 1
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "reading_time": {
      "type": "string",
      "required": true,
      "maxLength": 10,
      "minLength": 1
    },
    "data": {
      "type": "string",
      "required": true
    }
  }
}
